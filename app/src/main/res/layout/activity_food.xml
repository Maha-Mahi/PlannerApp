<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Catering Services"
        app:titleMarginStart="20dp"
        tools:ignore="MissingConstraints"  />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar1"
        android:layout_marginTop="52dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imagepopper"
            android:layout_width="130dp"
            android:layout_height="135dp"
            android:scaleType="centerCrop"
            android:src="@drawable/awlogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="AW Catering"
                android:textStyle="bold"
                android:textAlignment="inherit"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/awmeetid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:gravity="center_horizontal"
                android:text="Book Meeting"
                android:textAlignment="gravity"
                android:textSize="18sp" />

            <Button
                android:id="@+id/awviewid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="View "
                android:textAlignment="gravity"
                android:textSize="18sp"
             />



        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/darbarlogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Darbar Caterers"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/darbarmeetid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Book Meeting"

                android:textAlignment="gravity"
                android:textSize="18sp" />

            <Button
                android:id="@+id/darbarviewid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:text="View "
                android:textAlignment="gravity"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>