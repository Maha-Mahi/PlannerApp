<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Catering">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Catering Services"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imagefood"
            android:layout_width="210dp"
            android:scaleType="centerCrop"
            android:layout_height="190dp"
            app:srcCompat="@drawable/catering1" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20sp"
            android:text="Catering"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagecake"
            android:layout_width="210dp"
            android:scaleType="centerCrop"
            android:layout_height="200dp"
            android:layout_below="@+id/imagebaloon"
            app:srcCompat="@drawable/catcake" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_below="@+id/imageflower"
            android:layout_weight="1"
            android:text="Cake Services"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20sp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-black" />
    </LinearLayout>



</RelativeLayout>