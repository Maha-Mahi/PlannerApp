<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Vendors">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_gravity="center"
            tools:ignore="MissingClass,MissingConstraints">

            <ImageButton
                android:id="@+id/decorimage"
                android:layout_width="405dp"
                android:layout_height="184dp"
                android:layout_marginTop="180dp"
                android:contentDescription="Decoration Category"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/decoration2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Decoation Category"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="1" />

            <ImageButton
                android:id="@+id/cateimage"
                android:layout_width="405dp"
                android:layout_height="184dp"
                app:layout_column="0"
                app:layout_row="2"
                app:srcCompat="@drawable/catering" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Catering Category"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="3" />

            <ImageButton
                android:id="@+id/photoimage"
                android:layout_width="405dp"
                android:layout_height="184dp"
                app:layout_column="0"
                app:layout_row="4"
                app:srcCompat="@drawable/photography1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Photography Category"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="5" />

            <ImageButton
                android:id="@+id/artimage"
                android:layout_width="405dp"
                android:layout_height="184dp"
                app:layout_column="0"
                app:layout_row="6"
                app:srcCompat="@drawable/artist" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Artist Category"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="7" />
        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:longClickable="false"
        app:itemBackground="@color/colorPrimary"
        app:itemIconSize="20dp"
        app:itemIconTint="@drawable/selector"
        app:itemTextAppearanceActive="@style/AppTheme"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_navigation"
        tools:ignore="MissingConstraints" />


</RelativeLayout>