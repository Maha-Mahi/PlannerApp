<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Engage"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager11"
                android:layout_width="wrap_content"
                android:layout_height="250dp">

            </androidx.viewpager.widget.ViewPager>

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dot11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                app:dotsSize="10dp"
                app:dotsSpacing="4dp"
                app:selectedDotColor="@android:color/background_dark" />

            <EditText
                android:id="@+id/texteng0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:text="Engagement Deal"
                android:visibility="invisible"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:text="Deal Include:"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texteng1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:text=""
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/texteng2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@android:color/primary_text_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="For Details Contact Us:"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texteng3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:onClick="Phone()"
                android:drawableLeft="@drawable/ic_phone"
                android:text="03368069650"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/textww"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Terms And Conditions"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texteng4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/bookid"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Book This"
                android:background="@drawable/customize_btn"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="200dp"
                android:textStyle="normal" />


        </LinearLayout>
    </ScrollView>




</LinearLayout>