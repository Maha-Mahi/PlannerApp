<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".awcate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@drawable/awtitle"
            android:fitsSystemWindows="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="About"
            android:textColor="@android:color/background_dark"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/awabout"
            android:textSize="18sp"
            android:textColor="@color/cardview_dark_background" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:text="Services"
            android:textSize="22dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/awtext"
            android:textSize="18sp"
            android:textColor="@color/cardview_dark_background"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PortFolio"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:textSize="22dp"
            android:textColor="@android:color/background_dark"
            tools:ignore="MissingConstraints" />


            <ViewFlipper
                android:id="@+id/viewFlipperaw"
                android:layout_width="wrap_content"
                android:layout_height="250dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Located At:"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="22dp"
            android:textStyle="bold" />

        <fragment
            android:id="@+id/mapaaw"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="wrap_content"
            android:layout_height="250dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:text="Price Range"
            android:textSize="22dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting from 300PKR/Per Person"
            android:textSize="18sp"
            android:textColor="@color/cardview_dark_background"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:text="See Reviews"
            android:id="@+id/reviewid"
            android:textSize="22dp" />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rateidaw"
            android:numStars="5"
            android:stepSize="1"
            />

    </LinearLayout>

</ScrollView>